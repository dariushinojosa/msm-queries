
<h1>
  Actor #<%= @this_act.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<dl>
  <dt>Name</dt>
  <dd> <%= @this_act.name %> </dd>

  <dt>Dob</dt>
  <dd>
    <%= @this_act.dob %>    
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @this_act.bio %>    
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @this_act.image %>" width="100">
  </dd>

  <dt>Created at</dt>
  <dd> <%= @this_act.created_at %> </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @this_act.updated_at %>    
  </dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>

<% @matching_chars.each do |char| %>
  <% this_movie = Movie.where({ :id => char.movie_id}).first %>
  <% movie_dir = Director.where({ :id => this_movie.director_id}).first %>
    <tr>
      <td> <%= this_movie.title %> </td>
      <td> <%= this_movie.year %> </td>
      <td> <%= movie_dir.name %> </td>
      <td> <%= char.name %> </td>
      <td>
        <a href="/movies/<%= this_movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
